{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "src": ["src/"],
      "src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["dist", "node_modules", "reports"]
}
